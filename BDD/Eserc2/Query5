select distinct citta.regione
from (
	select distinct genia.genitore as nonno
		from genia, (
		select distinct persona.nome 
		from persona, genia
		where persona.nome = genia.genitore
	) as padre, persona
		where genia.figlio = padre.nome 
			AND persona.sesso = 'M' 
			AND genia.genitore = persona.nome
			AND persona.eta < 60
	) as nonno, citta, persona
where
	persona.nome = nonno AND persona.cittanascita = citta.nome
